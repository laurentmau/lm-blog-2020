{% extends "layouts/base.njk" %}

{% block content %}
<article class="voyage-etape">
  <h1>{{ title }}</h1>
  {{ content | safe }}

  {# ==== IMAGES AUTOMATIQUES ==== #}
  {% if imgFolder %}
    {% set pathPrefix = "src" + imgFolder %}
    <div class="etape-images">
      {% for image in collections.imagesVoyage %}
        {% if image.inputPath.startsWith(pathPrefix) %}
          <img src="{{ image.url }}" alt="Image de l'étape">
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}

  <nav class="etape-nav">
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url }}">← {{ pagination.previous.data.title }}</a>
    {% endif %}
    {% if pagination.next %}
      <a href="{{ pagination.next.url }}">{{ pagination.next.data.title }} →</a>
    {% endif %}
  </nav>
</article>
{% endblock %}

