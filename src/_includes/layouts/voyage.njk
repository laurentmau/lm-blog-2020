{% extends "layouts/base.njk" %}


TEXTE
{% block content %}
<article class="voyage-etape">
  <h1>{{ title }}</h1>
  {{ content | safe }}


IMAGES

{% if imgFolder %}
  <p><strong>imgFolder:</strong> {{ imgFolder }}</p>
  {% set folderPath = imgFolder %}
  <p><strong>folderPath utilisé :</strong> {{ folderPath }}</p>

  <div class="etape-images">
    {% for image in collections.allImages %}
      <p>
        image.inputPath: {{ image.inputPath }}<br />
        outputPath: {{ image.outputPath }}<br />
        match: {{ image.inputPath.startsWith(folderPath) }}
      </p>
      {% if image.inputPath.startsWith(folderPath) %}
        <img src="{{ image.outputPath | url }}" alt="Image de l'étape">
      {% endif %}
    {% endfor %}
  </div>
{% else %}
  <p><strong>imgFolder non défini</strong></p>
{% endif %}



  <nav class="etape-nav">
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url }}">← {{ pagination.previous.data.title }}</a>
    {% endif %}
    {% if pagination.next %}
      <a href="{{ pagination.next.url }}">{{ pagination.next.data.title }} →</a>
    {% endif %}
  </nav>
</article>
{% endblock %}


